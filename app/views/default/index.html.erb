      <% if !logged_in? %>
        <a href="/signup" class="btn btn-primary js-scroll-trigger">Sign Up</a>
      <% end %>
    </div>
  </div>
</header>


    <% if logged_in? %>

      <div class="row">
       <aside class="col-md-4">
         <section class="user_info">
           <%= render 'shared/user_info' %>
         </section>
         <section class="review_form">
           <%= render 'shared/review_form' %>
         </section>
       </aside>
      </div>

    <% else %>

    <% end %>
